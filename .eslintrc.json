{
  "extends": ["next/core-web-vitals"],
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/tests/**/*.{ts,tsx}"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["drizzle.config.ts", "jest.config.js", "jest.setup.js", "playwright.config.ts"],
      "env": {
        "node": true
      },
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "rules": {
    "no-unused-vars": "off"
  }
}
